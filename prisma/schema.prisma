generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  quizzes   Quiz[]

  @@map("users")
}

model Quiz {
  id          Int      @id @default(autoincrement())
  title       String   @unique
  description String
  quizCode    String   @unique
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  userId    String
  user      User       @relation(fields: [userId], references: [id])
  questions Question[]
  attempts  Attempt[]

  @@map("quizzes")
}

enum QuestionType {
  MULTIPLE_CHOICE
  TRUE_FALSE
}

model Question {
  id     Int          @id @default(autoincrement())
  quizId Int
  quiz   Quiz         @relation(fields: [quizId], references: [id])
  text   String
  type   QuestionType @default(TRUE_FALSE)
  points Int          @default(1)

  options Option[]
  answers Answer[]

  @@map("questions")
}

model Option {
  id         Int      @id @default(autoincrement())
  questionId Int
  question   Question @relation(fields: [questionId], references: [id])

  text      String
  isCorrect Boolean  @default(false)
  answers   Answer[]

  @@map("options")
}

model Attempt {
  id          Int       @id @default(autoincrement())
  quizId      Int
  quiz        Quiz      @relation(fields: [quizId], references: [id])
  studentName String
  startedAt   DateTime  @default(now())
  completedAt DateTime?
  score       Int       @default(0)
  answers     Answer[]

  @@map("attempts")
}

model Answer {
  id               Int      @id @default(autoincrement())
  attemptId        Int
  attempt          Attempt  @relation(fields: [attemptId], references: [id])
  questionId       Int
  question         Question @relation(fields: [questionId], references: [id])
  selectedOptionId Int?
  selectedOption   Option?  @relation(fields: [selectedOptionId], references: [id])
  isCorrect        Boolean  @default(false)

  @@map("answers")
}
