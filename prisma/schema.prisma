generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  quizzes   Quiz[]

  @@map("users")
}

model Quiz {
  id          Int      @id @default(autoincrement())
  title       String   @unique
  description String
  quizCode    String   @unique
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  userId    String
  user      User        @relation(fields: [userId], references: [id])
  questions Quiestion[]

  @@map("quizzes")
}

enum QuestionType {
  MULTIPLE_CHOICE
  TRUE_FALSE
}

model Quiestion {
  id     Int          @id @default(autoincrement())
  quizId Int
  quiz   Quiz         @relation(fields: [quizId], references: [id])
  text   String
  type   QuestionType @default(TRUE_FALSE)
  points Int          @default(1)

  options Option[]

  @@map("questions")
}

model Option {
  id         Int       @id @default(autoincrement())
  questionId Int
  question   Quiestion @relation(fields: [questionId], references: [id])

  text     String
  isCorret Boolean @default(false)
}
